# Default to nvim if it's installed
if command -v nvim > /dev/null 2>&1; then
	alias e=nvim
	alias v=nvim
	alias vi=nvim
	alias vim=nvim
	alias vimdiff='nvim -d'
fi

# Make commands colorful
alias grep='grep --color=auto'
alias ls='ls --color --group-directories-first'

# Sneaky Vim Habit
alias :wq='exit'
alias :q='exit'

# Default df and du to human readable
alias df='df -h'
alias du='du -h'
